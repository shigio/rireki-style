%----------------------------------------------------------------------------
\def\ThickBox(#1,#2){
	\linethickness{0.5mm}
	\Add{#1}{0.5}{\w}
	\Put(-0.25,0){\line(1,0){\w}}
	\Put(0,0){\line(0,-1){#2}}
	\Put(-0.25,#2){\line(1,0){\w}}
	\Put(#1,0){\line(0,-1){#2}}
	\linethickness{0.1mm}
}
